<% layout('layouts/boilerplate')%>
<div id="map" style="width: 100% ;height: 500px"></div>
    <h1>All Campgrounds</h1>
        <% for (let c of cs) { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if(c.Images.length) { %>
                        <img src="<%=c.Images[0].url%>" alt="" class="img-fluid">
                        <% } else { %>
                            <img src="https://res.cloudinary.com/dtrj6ryzw/image/upload/v1618130100/hvyegjuypiicpjpfkiey.jpg" alt="">
                            <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%=c.title%></h5>
                            <p class="card-text"><%=c.description%></p>
                            <p class="card-text">
                                <small class="text-muted"><%=c.location%></small>
                            </p>
                            <a href="/campsites/<%=c._id%>" class="btn btn-primary">View <%=c.title%></a>
                        </div>
                    </div>
                </div>
            </div>
            <% }%>
            <script>
                const mapboxtoken = '<%- process.env.MAPBOX_TOKEN%>';
                const cs = { features : <%-JSON.stringify(cs)%> };
            </script>
            <script src="/scripts/clusterMap.js"></script>